{
    "name": "dogma/dogma-dev",
    "type": "library",
    "description": "Development tools and dependencies for Dogma and other projects",
    "homepage": "https://github.com/paranoiq/dogma-dev",
    "license": ["BSD-3-Clause"],
    "authors": [
        {
            "name": "Vlasta Neubauer",
            "homepage": "https://paranoiq.cz"
        }
    ],
    "require": {
        "php": "^7.1|^8.0",
        "ext-json": "*",
        "maglnet/composer-require-checker": "~2.0|~3.0",
        "nette/tester": "^2.4",
        "php-parallel-lint/php-console-highlighter": "~0.3",
        "php-parallel-lint/php-parallel-lint": "~1.0",
        "slevomat/coding-standard": "8.3.0",
        "squizlabs/php_codesniffer": "^3.5.4",
        "spell-checker/spell-checker": "^0.3.21",
        "spell-checker/dictionary-en": "~0.1",
        "tracy/tracy": "^2.8"
    },
    "require-dev": {
        "phpstan/phpstan": "1.10.7",
        "phpstan/phpstan-strict-rules": "^1.0"
    },
    "autoload": {
        "classmap": ["src"]
    },
    "autoload-dev": {
        "classmap": ["tests"]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "scripts": {
        "da": "composer dump-autoload",

        "ag": "@build:doc",
        "b": "@build:init",
        "c": "@check:all",
        "cf": "@check:fast",
        "r": "@build:rector",
        "t": "@tests:run",
        "tm": "@tests:mysql",
        "tms": "@tests:mysql-s",
        "tc": "@tests:coverage",
        "ps": "@phpstan:run",
        "sc": "@spell:check",
        "cs": [
            "@phpcs:src",
            "@phpcs:tests"
        ],
        "csf": "@phpcs:fix",
        "pc": "@package:check",

        "check:run": [
            "@package:check",
            "@phpstan:run",
            "@phpcs:setup",
            "@phpcs:src",
            "@spell:check",
            "@phplint:run"
        ],
        "check:all": [
            "@package:check",
            "@phpstan:all",
            "@phplint:all",
            "@phpcs:setup",
            "@phpcs:src",
            "@spell:check"
        ],

        "phpstan:run": "php vendor/phpstan/phpstan/phpstan analyse -c build/phpstan.neon",
        "phpstan:all": [
            "php82 vendor/phpstan/phpstan/phpstan analyse -c build/phpstan.neon",
            "php81 vendor/phpstan/phpstan/phpstan analyse -c build/phpstan.neon",
            "php80 vendor/phpstan/phpstan/phpstan analyse -c build/phpstan.neon",
            "php74 vendor/phpstan/phpstan/phpstan analyse -c build/phpstan.neon",
            "php73 vendor/phpstan/phpstan/phpstan analyse -c build/phpstan.neon",
            "php72 vendor/phpstan/phpstan/phpstan analyse -c build/phpstan.neon",
            "php72 vendor/phpstan/phpstan/phpstan analyse -c build/phpstan71.neon"
        ],

        "phpcs:run": [
            "@phpcs:setup",
            "@phpcs:src"
        ],
        "phpcs:setup": [
            "php -r \"@mkdir('vendor/dogma/dogma-dev/src/CodeSniffer', 0777, true);\"",
            "php -r \"copy('src/CodeSniffer/ruleset.xml', 'vendor/dogma/dogma-dev/src/CodeSniffer/ruleset.xml');\"",
            "php -r \"copy('src/CodeSniffer/ruleset-tests.xml', 'vendor/dogma/dogma-dev/src/CodeSniffer/ruleset-tests.xml');\""
        ],
        "phpcs:src": "php vendor/squizlabs/php_codesniffer/bin/phpcs --standard=vendor/dogma/dogma-dev/src/CodeSniffer/ruleset-tests.xml --extensions=php --encoding=utf-8 --tab-width=4 -sp src",

        "phplint:run": "php vendor/php-parallel-lint/php-parallel-lint/parallel-lint src",
        "phplint:all": [
            "php82 vendor/php-parallel-lint/php-parallel-lint/parallel-lint src",
            "php81 vendor/php-parallel-lint/php-parallel-lint/parallel-lint src",
            "php80 vendor/php-parallel-lint/php-parallel-lint/parallel-lint src",
            "php74 vendor/php-parallel-lint/php-parallel-lint/parallel-lint src",
            "php73 vendor/php-parallel-lint/php-parallel-lint/parallel-lint src",
            "php72 vendor/php-parallel-lint/php-parallel-lint/parallel-lint src",
            "php71 vendor/php-parallel-lint/php-parallel-lint/parallel-lint src"
        ],

        "package:check": "php src/package-check.php",
        "spell:check": "php vendor/spell-checker/spell-checker/spell-checker.php -c build/spell-checker.neon --checkDictionaryFiles --memoryLimit 1024M --noLogo"
    }
}
