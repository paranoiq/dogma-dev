{
    "name": "dogma/dogma-dev",
    "type": "library",
    "description": "Development tools and dependencies for Dogma and other projects.",
    "homepage": "http://github.com/paranoiq/dogma-dev",
    "license": ["BSD-3-Clause"],
    "authors": [
        {
            "name": "Vlasta Neubauer",
            "homepage": "https://www.paranoiq.cz"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "nette/tester": "~2.3.1",
        "php-parallel-lint/php-console-highlighter": "~0.3",
        "php-parallel-lint/php-parallel-lint": "~1.0",
        "phpstan/phpstan": "0.12.56",
        "slevomat/coding-standard": "6.4.1",
        "squizlabs/php_codesniffer": "^3.5.4",
        "spell-checker/spell-checker": "^0.3.16",
        "spell-checker/dictionary-en": "~0.1",
        "tracy/tracy": "~2.4"
    },
    "suggest": {
        "ext-sockets": "For debug-server.php and debug-client.php"
    },
    "autoload": {
        "classmap": ["src"]
    },
    "scripts": {
        "da": "composer dump-autoload",
        "check": [
            "@phpstan",
            "@phpcs:setup",
            "@phpcs:src",
            "@spell-check",
            "@phplint"
        ],
        "cs": [
            "@phpcs:setup",
            "@phpcs:src"
        ],
        "phpcs:setup": [
            "php -r \"@mkdir('vendor/dogma/dogma-dev/src/CodeSniffer', 0777, true);\"",
            "php -r \"copy('src/CodeSniffer/ruleset.xml', 'vendor/dogma/dogma-dev/src/CodeSniffer/ruleset.xml');\"",
            "php -r \"copy('src/CodeSniffer/ruleset-tests.xml', 'vendor/dogma/dogma-dev/src/CodeSniffer/ruleset-tests.xml');\""
        ],
        "phpcs:src": "sh vendor/bin/phpcs --standard=vendor/dogma/dogma-dev/src/CodeSniffer/ruleset-tests.xml --extensions=php --encoding=utf-8 --tab-width=4 -sp src",
        "phplint": "sh vendor/bin/parallel-lint src",
        "phpstan": "sh vendor/bin/phpstan analyse -c build/phpstan.neon -l 8 src",
        "spell-check": "sh vendor/bin/spell-checker -c build/spell-checker.neon --checkDictionaryFiles --memoryLimit 1024M --noLogo"
    }
}
